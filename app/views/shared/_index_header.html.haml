.index-header 
  .index-header__index-inner 
    .top-header
      .top-header-image  
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1881812696", alt: "company_logo"}
      .top-page-search
        = form_for "" do |f| 
          = f.text_field :content, class: 'header_search', placeholder: '  何かお探しですか?' 
          %label.form-mask 
            = f.submit 'Send', class: 'form__submit'
            = icon('fas', 'search', class: 'search-icon')

    .bottom-header 
      .bottom-header__left
        %ul.category-brands
          %li
            %h2.category-list-parent 
              = icon('fas', 'list-ul', class: 'category-list-ul')
              %span カテゴリーから探す             
          %li
            %h2.brands-list-parent 
              = icon('fas', 'tag', class: 'brands-list-tag')
              %span ブランドから探す
      - if user_signed_in?
        .bottom-header__right__login
          %ul.devise-login
            %li
              = link_to "", class: "bottom-header__like__index" do
                = icon 'fa', 'heart', class: 'bottom-header__like__index--icon'
                %span いいね！一覧
            %li
              = link_to "", class: "bottom-header__information" do
                = icon 'fa', 'bell', class: 'bottom-header__information--icon'
                %span お知らせ
            %li
              = link_to "", class: "bottom-header__todo__list" do
                = icon 'fa', 'check', class: 'bottom-header__todo__list--icon'
                %span やることリスト
            %li
              = link_to mypages_path, class: "bottom-header__move__mypage" do
                = image_tag 'common/user-icon.png', alt: 'ユーザアイコン', class: 'bottom-header__move__mypage--icon', height: '30', width: '30'
                %span マイページ
      - else
        .bottom-header__right__logout
          %ul.devise-logout
            %li
              = link_to signup_path, class: "new-member-registration" do
                新規会員登録
            %li
              = link_to login_path, class: "log-in" do
                ログイン