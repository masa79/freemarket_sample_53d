.mypage__right
  .mypage__right__content
    .user
      =link_to '#', class: 'user__link' do
        = image_tag 'common/user-icon.png', alt: 'icon', class: 'user__link__icon', height: '60', width: '60'
        %h2.user__link__nickname aaa
        .user__link__review
          %div
            評価
            %span 0
          %div
            出品数
            %span 0

  .tag-box
    .tag-box__tab
      %h3.tag-box__tab--left.active-tab お知らせ
      %h3.tag-box__tab--right.not-active-tab やることリスト

    .left-link.active
      = render partial: "upper_left-list"
    .right-link.not-active
      = render partial: "upper_right-list"

  .tag-box
    %h2.tag-box__title 購入した商品
    .tag-box__tab
      %h3.tag-box__tab--left.active-tab 取引中
      %h3.tag-box__tab--right.not-active-tab 過去の取引

    .left-link.active
      = render partial: "lower_left-list"
    .right-link.not-active
      = render partial: "lower_right-list"
